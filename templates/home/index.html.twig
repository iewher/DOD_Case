{# templates/index.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
	<div class='page'>
		<div class='page-header'>
			<div class='page-header__logo'>
				<h1>
					DOD_Case
				</h1>
				<p>
					Интернет магазин кроссовок
				</p>
			</div>
			<div class='page-header__user'>
				<form>
					<input type="text" name="username" placeholder="Имя пользователя">
					<input type="email" name="email" placeholder="Email">
					<button type="submit">Добавить пользователя</button>
				</form>
			</div>
		</div>
		<div class='page-body'>
			<p>
				Отличная подборка
			</p>
			<div class='page-body__posters'>
				{% for poster in posters %}
					<div class='poster'>
						<img src="{{ poster.image }}" alt="{{poster.image}}"/>
					</div>
				{% endfor %}
			</div>
			<p>
				Посмотри и выбери сам
			</p>
			<div class='page-body__cards'>
				{% for product in products %}
					<div class='card'>
						<img src="{{ product.image }}" alt="{{ product.title }}"/>
						<p class='card-title'>{{ product.title }}</p>
						<h2 class='card-price'>{{ product.price }}
							₽</h2>
					</div>
				{% endfor %}
			</div>
		</div>
		<div class='page-footer'>
			<p>© 2023 Магазин DOD_Case</p>
			<a href='https://github.com/iewher/DOD_Case'>GitHub</a>
		</div>
	</div>
{% endblock %}
